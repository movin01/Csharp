@using Login_and_Registration.Models
@model User


<form asp-action="register" asp-controller="Home" method="post">
  <div class="container">
    <h1>Register</h1>
    <a href="/login">Login</a>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <span asp-validation-for="FirstName" ></span><br>
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName">
<br>
    <span asp-validation-for="LastName" ></span><br>
    <label asp-for="LastName"></label>
    <input asp-for="LastName">
<br>
    <span asp-validation-for="Email" ></span><br>
    <label asp-for="Email"></label>
    <input asp-for="Email">
<br>
    <span asp-validation-for="Password" ></span><br>
    <label asp-for="Password"></label>
    <input asp-for="Password">
<br>
    <span asp-validation-for="Confirm" ></span><br>
    <label asp-for="Confirm"></label>
    <input asp-for="Confirm">
    <hr>
<br>
    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>
  </div>

  <div class="container signin">
    <p>Already have an account? <a href="#">Sign in</a>.</p>
  </div>
</form>